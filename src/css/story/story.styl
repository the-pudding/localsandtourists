/* CUSTOM STORY STYLE */

.cover
    position: relative
    display: flex
    flex-direction: column
    background-image: linear-gradient(#0f5483, #44A5EB);
    // padding-top 3rem

    .v2-cover-text
        display: flex
        flex-direction: column
        padding-top 3rem
        justify-content flex-end
        font-family: 'National 2 Web'


        .title
          flex-grow 1
          display flex
          flex-direction column
          justify-content center
          .title-text
              text-align: center
              font-size 432px
              color: white
              font-weight: 800
              width 100%

              @media (max-width: 550px)
                  font-size 144px

        .subhed
            text-align left
            font-size 24px
            color white
            display: flex
            flex-direction: column
            justify-content: flex-end

            &__para
                margin 0
                margin-top 0.5rem
                margin-left 3rem
                font-size 24px
                @media (max-width: 550px)
                    font-size 18px


            .byline
                text-align: left
                font-family: 'National 2 Web'
                font-size 18px
                color white
                margin-left 3rem
                margin-top 2rem
                @media (max-width: 550px)
                    font-size 16px

                a
                  color white
                  border-color #fff
                  span
                    color white

    .v2-cover-img
        height 50vh
        display: flex
        flex-direction: column
        justify-content: space-evenly
        margin 0 auto
        max-width: 70rem

        .v2-img-row
            height 10%
            display: flex
            flex-direction: row
            // justify-content: space-evenly

            .cover-icon
                height 100%

    .cover-text-container
        position: absolute
        left: 50%
        top: 50%
        transform: translate(-50%,-50%)


        .hed-container
            border: 3px solid #333;
            padding 2rem 0 2rem 0

            .title
                margin 0 auto
                text-align center

            .hed
                font-size: 48px
                font-family: 'AdamCG'
                width 50rem

            .subhed
                font-family: 'National 2 Web'
                font-size 36px


